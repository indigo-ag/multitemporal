{
    "projname" : "mt_test_features",
    "projdir"  : "/multitemporal/multitemporal/test/data/input",
    "outdir"   : "/data/mt_test",
    "dperframe": 1,
    "sources":
    [
        {
            "name"   : "evi2",
            "regexp" : "^(\\d{7})_LC8_ndvi-toa.tif$",
            "bandnum": 1
        },
        {
            "name"   : "mask",
            "regexp" : "^(\\d{7})_foo_mask.tif$",
            "bandnum": 1
        }
    ],
    "steps":
    [
        {
            "module" : "interpolate",
            "params" : [],
            "inputs" : "evi2",
            "output" : true
        },
        {
            "module" : "shifttime",
            "params" : [244],
            "inputs" : "interpolate",
            "output" : true
        },
        {
            "name"   : "evi_1yr",
            "module" : "trimyr",
            "params" : [1,1],
            "inputs" : "shifttime",
            "output" : true
        },
        {
            "name"   : "mask_1yr",
            "module" : "trimyr",
            "params" : [2,2],
            "inputs" : "mask",
            "output" : true
        },
        {
            "module" : "classify_brazil",
            "params" : [0.2],
            "inputs" : ["evi_1yr", "mask_1yr"],
            "output" : true
        }

    ]
}
